{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "chrome extension ng2 boilerplate",
  "description": "chrome extension ng2 boilerplate",
  "author": "Jerry Lin",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "content_security_policy": "default-src 'self';",
  "background": {
    "page": "background/index.html",
    "persistent": false
  },
  "options_page": "options/index.html",
  "browser_action": {
    "default_icon": {
      "19": "favicon.ico",
      "38": "favicon.ico"
    },
    "default_title": "browser action title",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}
